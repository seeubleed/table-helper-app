{
  "name": "table_helper_app",
  "version": "0.5.0",
  "description": "Обработчик xlsx файлов",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "electron-builder": "electron-builder"
  },
  "author": "seeubleed",
  "license": "Apache-2.0",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-updater": "^6.3.9",
    "exceljs": "^4.4.0",
    "luxon": "^3.5.0",
    "sortablejs": "^1.15.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.seeubleed.tablehelperapp",
    "productName": "table_helper_app",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "src/html/index.html",
      "src/styles/styles.css",
      "!dist/**/*",
      "!dist/mac-universal-x64-temp/**/*",
      "!dist/mac-universal-arm64-temp/**/*",
      "!dist/*.dmg",
      "!dist/*.exe",
      "!dist/*.zip"
    ],
    "extraResources": [
      {
        "from": "options.json",
        "to": "options.json"
      },
      {
        "from": "colors.json",
        "to": "colors.json"
      },
      {
        "from": "columns.json",
        "to": "columns.json"
      },
      {
        "from": "settings.json",
        "to": "settings.json"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "seeubleed",
      "repo": "table-helper-app",
      "releaseType": "draft"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null
    }
  }
}
